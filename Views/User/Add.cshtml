@model DeviceManagementApplication.Models.User

<h2>Add Category</h2>

<form asp-action="Add" method="post">
    <div class="form-group mb-2">
        <label asp-for="fullName">Full Name</label>
        <input type="text" asp-for="fullName" class="form-control" placeholder="Enter your full name"/>
        <span asp-validation-for="fullName" class="text-danger"></span>
    </div>
    <div class="form-group mb-2">
        <label asp-for="email">Email</label>
        <input type="email" asp-for="email" class="form-control" placeholder="Enter your email"/>
        <span asp-validation-for="email" class="text-danger"></span>
    </div>
    <div class="form-group mb-2">
        <label asp-for="phoneNumber">Phone Number</label>
        <input asp-for="phoneNumber" class="form-control" placeholder="Enter your phone number"/>
        <span asp-validation-for="phoneNumber" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Add</button>
</form>

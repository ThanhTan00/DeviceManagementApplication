@model List<DeviceManagementApplication.Models.User>

<div class="d-flex justify-content-between">
    <div class="p-2">
        <h3>Category List</h3>
    </div>
    <div class="p-2">
        <a asp-action="Add" class="btn btn-primary mb-3">Add New Category</a>
    </div>
</div>
<table class="table table-danger table-striped">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Phone</th>
            <th scope="col">Action</th>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.fullName</td>
                <td>@user.email</td>
                <td>@user.phoneNumber</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@user.id" class="btn btn-danger btn-sm"
                       onclick="return confirm('Are you sure you want to delete this user?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

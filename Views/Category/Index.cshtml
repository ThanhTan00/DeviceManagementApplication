@model List<DeviceManagementApplication.Models.Category>

<div class="d-flex justify-content-between">
    <div class="p-2">
        <h3>Category List</h3>
    </div>
    <div class="p-2">
        <a asp-action="Add" class="btn btn-primary mb-3">Add New Category</a>
    </div>
</div>
<table class="table table-primary table-striped">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Category Name</th>
            <th scope="col">Action</th>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.id</td>
                <td>@category.name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@category.id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@category.id" class="btn btn-danger btn-sm"
                       onclick="return confirm('Are you sure you want to delete this user?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
